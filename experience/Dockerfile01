FROM python:3.7.8

WORKDIR /data/antwork_backend

RUN apt-get update

COPY requirements.txt ./
COPY antwork_backend ./

RUN pip install  -r requirements.txt -i https://pypi.tuna.tsinghua.edu.cn/simple && mkdir /data/record_log && mkdir /data/logs

CMD /bin/bash

